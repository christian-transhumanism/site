---
title: Christian Transhumanist Community
description: Posts from our diverse community
permalink: "blog/community/"
layout: default
---

<div class="blog-page">
{% include 'shared/content_topbar.njk' %}

<!-- Page Content -->
<div class="container">
    <div class="row">

        <!-- Blog Entries Column -->
        <div class="col-md-8">

            <h1 class="page-header">
                Posts
                <small>from our diverse community</small>
            </h1>

            {% for post in community | sortByPubDate | reverse %}
                <div class="blog-post">
                    <div class="row">
                        {% set postImage = post.featuredImage or (post.content | getFirstImage) %}
                        {% if postImage %}
                        <div class="col-md-4">
                            <a href="{{ post.link }}" class="post-image-link">
                                <img src="{{ postImage }}" alt="{{ post.title }}" class="img-responsive post-image" onerror="this.style.display='none'">
                            </a>
                        </div>
                        <div class="col-md-8">
                        {% else %}
                        <div class="col-md-12">
                        {% endif %}
                            <h2 class="post-title">
                                <a href="{{ post.link }}">{{ post.title }}</a>
                            </h2>

                            <p class="post-meta">
                                by <span class="post-author">{{ post.author | default(post.creator) | default("a community member") | nameFromRSSAuthor }}</span>
                                <span class="post-date"><span class="glyphicon glyphicon-time"></span> {{ post.pubDate | default("2000") }}</span>
                            </p>

                            <div class="post-excerpt">
                                {{ post.content | striptags | truncate(280, true, 'â€¦') }}
                            </div>
                        </div>
                    </div>
                </div>

                <hr>

            {% endfor %}

            {% if @pager_widget_on %}
                <!-- Pager -->
                <ul class="pager">
                    <li class="previous">
                        <a href="#">&larr; Older</a>
                    </li>
                    <li class="next">
                        <a href="#">Newer &rarr;</a>
                    </li>
                </ul>
            {% endif %}

        </div>

        <div class="col-md-4">
            <div class="well site-sidebar">
                {% include 'shared/sidebar_nav.njk' %}
            </div>
        </div>

    </div>
    <!-- /.row -->

    
</div>
<!-- /.container -->
</div>
