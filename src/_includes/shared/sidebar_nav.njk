<ul>
  {% for item in sidebarMenuItems %}
    {% if item.children %}
      <li><a href="{{ item.url }}">{{ item.title }}</a><ul>

        {% for item in item.children %}
          {% if item.children %}
            <li><a href="{{ item.url }}">{{ item.title }}</a><ul>

              {% for item in item.children %}
                {% if item.children %}
                  <li><a href="{{ item.url }}">{{ item.title }}</a><ul>

                    {% for item in item.children %}
                      {% if item.children %}
                        <li><a href="{{ item.url }}">{{ item.title }}</a><ul>
                        </ul></li>
                      {% else %}
                        <li><a href="{{ item.url }}">{{ item.title }}</a></li>
                      {% endif %}
                    {% endfor %}

                  </ul></li>
                {% else %}
                  <li><a href="{{ item.url }}">{{ item.title }}</a></li>
                {% endif %}
              {% endfor %}

            </ul></li>
          {% else %}
            <li><a href="{{ item.url }}">{{ item.title }}</a></li>
          {% endif %}
        {% endfor %}

      </ul></li>
    {% else %}
      <li><a href="{{ item.url }}">{{ item.title }}</a></li>
    {% endif %}
  {% endfor %}
</ul>