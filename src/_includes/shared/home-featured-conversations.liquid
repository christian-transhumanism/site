<div class="feature-grid">
{% for c in conversations %}
<a class="feature-card" href="{{ c.url }}">
<span class="feature-card__media" style="background-image: url('{{ c.image | cdnImage: "c_fill,g_auto,f_auto,q_auto,w_600,h_220,dpr_auto" }}');"></span>
<span class="feature-card__body">
<h3 class="feature-card__title">{{ c.title }}</h3>
<p class="feature-card__blurb">{{ c.blurb }}</p>
</span>
</a>
{% endfor %}
</div>
