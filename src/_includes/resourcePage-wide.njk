---
layout: default
---

<div class="resource-page">
{% set currentUrl = page.url or '' %}
{% if '/mission/' in currentUrl %}
  {% include 'shared/mission_topbar.njk' %}
{% elseif currentUrl == '/about/' %}
  {% include 'shared/association_topbar.njk' %}
{% elseif currentUrl == '/faq/' or currentUrl == '/quotes/' or (currentUrl | stringContains('/wiki/')) %}
  {% include 'shared/content_topbar.njk' %}
{% else %}
  {% include 'shared/mission_topbar.njk' %}
{% endif %}

<div class="container">
  <div class="row">
    <div class="col-md-12">

      {{ content | safe }}

      {% if disqus_id %}
      <div class="row">
        <div class="col-md-12">

          {% include 'shared/disqus_thread.njk' %}

        </div>
      </div>
      {% endif %}

    </div>

  </div>
</div>
</div>
