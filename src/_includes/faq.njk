---
title: Frequently Asked Questions
description: Questions that everyone will be asking in the future
layout: resourcePage
---

<h1>Frequently Asked Questions</h1>
<section id="fh5co-faqs">
  <div class="faq-toolbar">
    <input type="search" id="faq-search" class="form-control input-sm" placeholder="Search FAQs..." aria-label="Search FAQs">
    <div class="btn-group btn-group-sm" role="group" aria-label="FAQ controls">
      <button type="button" id="faq-collapse-all" class="btn btn-default">Collapse All</button>
      <button type="button" id="faq-expand-all" class="btn btn-primary">Expand All</button>
    </div>
  </div>
  <div class="faq-empty alert alert-info" style="display:none;">No matching questions.</div>
  <ul class="faq-list">
  {% for faq in faqs %}
    <li class="faq-item" role="group">
      <button type="button" class="faq-question" id="q-{{ loop.index }}" aria-controls="a-{{ loop.index }}" aria-expanded="false">
        <span class="faq-question-text">{{ faq.question | mdInline | wikilinks | safe }}</span>
        <span class="faq-question-icon" aria-hidden="true">
          <i class="glyphicon glyphicon-chevron-down"></i>
        </span>
      </button>
      <div class="faq-body" id="a-{{ loop.index }}" role="region" aria-labelledby="q-{{ loop.index }}">
        {{ faq.answer | md | wikilinks | safe }}
      </div>
    </li>
  {% endfor %}
  </ul>
</section>

<script>
  (function($){
    var $faqContainer = $('#fh5co-faqs');
    var $expandAll = $('#faq-expand-all');
    var $collapseAll = $('#faq-collapse-all');

    function setButtons(state){
      $expandAll.removeClass('btn-primary btn-default');
      $collapseAll.removeClass('btn-primary btn-default');
      if (state === 'expanded') {
        $expandAll.addClass('btn-primary');
        $collapseAll.addClass('btn-default');
      } else if (state === 'collapsed') {
        $collapseAll.addClass('btn-primary');
        $expandAll.addClass('btn-default');
      } else {
        $expandAll.addClass('btn-default');
        $collapseAll.addClass('btn-default');
      }
    }

    function updateToolbarState(){
      var $items = $faqContainer.find('.faq-item:visible');
      if (!$items.length) {
        setButtons('collapsed');
        return;
      }
      var expandedCount = $items.filter('.active').length;
      if (expandedCount === 0) setButtons('collapsed');
      else if (expandedCount === $items.length) setButtons('expanded');
      else setButtons('partial');
    }

    function toggle($item, expand, silent){
      var $body = $item.find('.faq-body');
      var $button = $item.find('.faq-question');
      var isActive = $item.hasClass('active');
      var doExpand = (typeof expand !== 'undefined') ? expand : !isActive;
      $item.toggleClass('active', doExpand);
      $button.attr('aria-expanded', doExpand);
      if (doExpand) { $body.show(); }
      else { $body.hide(); }
      if (!silent) updateToolbarState();
    }

    $faqContainer.on('click', '.faq-question', function(){
      toggle($(this).closest('.faq-item'));
    });

    // Keyboard accessibility: toggle with Enter/Space
    $faqContainer.on('keydown', '.faq-question', function(e){
      if (e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        toggle($(this).closest('.faq-item'));
      }
    });

    // Expand/Collapse All
    $expandAll.on('click', function(){
      $faqContainer.find('.faq-item:visible').each(function(){ toggle($(this), true, true); });
      updateToolbarState();
    });
    $collapseAll.on('click', function(){
      $faqContainer.find('.faq-item:visible').each(function(){ toggle($(this), false, true); });
      updateToolbarState();
    });

    // Simple search/filter
    $('#faq-search').on('input', function(){
      var q = $(this).val().toLowerCase().trim();
      var any = false;
      $faqContainer.find('.faq-item').each(function(){
        var $item = $(this);
        var text = ($item.find('.faq-question-text').text() + ' ' + $item.find('.faq-body').text()).toLowerCase();
        var match = q === '' || text.indexOf(q) !== -1;
        $item.toggle(match);
        if (match) any = true;
      });
      $('.faq-empty').toggle(!any);
      updateToolbarState();
    });

    updateToolbarState();
  })(jQuery);
</script>
