---
title: title
image: image
description: teaser
disqus_id: "00000000000000"
layout: default
---
<div class="blog-page">
{% include 'shared/content_topbar.njk' %}

<!-- Page Content -->
<div class="container">
    <div class="row">

        <!-- Blog Post Content Column -->
        <div class="col-lg-8">

            <!-- Blog Post -->

            <!-- Title -->
            <h1 class="page-header">{{ title }}</h1>

            <!-- Author -->
            <p class="lead">
              {{ author }}
            </p>

            <hr>

            <!-- Date/Time -->
            <p><span class="glyphicon glyphicon-time"></span> Posted on {{ date }}</p>
                <hr>
                <!-- Preview Image -->
                <img class="img-responsive" src="{{ image }}" alt="">
                <hr>

            <!-- Post Content -->
            {{ content | safe }}

            <hr>

            <!-- Blog Comments -->
            {% include 'shared/disqus_thread.njk' %}

        </div>

        <div class="col-lg-4">
            <div class="well">
                <h4>Guests</h4>
                <br />
                <div class="row">
                    <div class="col-md-12">
                        <ul class="list-unstyled">
                            {% for guest in guests %}
                                <li><a href="{{ guest.url }}">{{ guest.name }}</a></li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- /.row -->

    
</div>
<!-- /.container -->
</div>
