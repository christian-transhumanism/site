---
pagination:
    data: podcast
    size: 1
    alias: post
permalink: "podcast/{{ post.guid | episodeNumberFromRSSGUID }}/"
layout: default
---
{% include 'shared/content_topbar.njk' %}

<!-- Page Content -->
<div class="container">
    <div class="row">

        <!-- Blog Post Content Column -->
        <div class="col-lg-8">

            <!-- Blog Post -->

            <!-- Title -->
            <h3 class="page-header">
                <a href="/podcast/">The Christian Transhumanist Podcast</a> &nbsp; 
                <span style="padding: 1rem 0;">
                    <a class="btn btn-primary" href="https://itunes.apple.com/us/podcast/christian-transhumanist-podcast/id1053762042">iTunes</a>
                    <a class="btn btn-primary" href="http://brickcaster.com/christiantranshumanist/subscribe">email</a>
                    <a class="btn btn-primary" href="http://brickcaster.com/christiantranshumanist.rss">RSS</a>
                </span>
            </h3>

            <h1 class="page-header">{{ post.title }}</h1>

            <!-- Author -->
            <p class="lead">
              {{ post.author }}
            </p>

            <hr>

            <!-- Date/Time -->
            <p><span class="glyphicon glyphicon-time"></span> Posted on {{ post.pubDate }}</p>
                <hr>
                <!-- Preview Image -->
                <img class="img-responsive" src="{{ post.itunes.image }}" alt="">
                <hr>

            <div id="audio-player">
              <audio controls="controls">
                <source src="{{ post.enclosure.url }}" type="audio/mpeg">
                <source src="{{ post.enclosure.url }}" type="audio/mp3">
                <p>Your browser does not support HTML5 audio, but you can <a href="{{ post.enclosure.url }}">(download)</a> this episode!</p>
              </audio>
              <a href="{{ post.enclosure.url }}">(download)</a>
            </div>
            <br />

            <!-- Post Content -->
            {{ post["content:encoded"] | safe }}

            <hr>

            <div class="episode-details">
                {{ post.title }}<br />
                <a href="/podcast/">Christian Transhumanist Podcast</a><br />
                <a href="https://www.micahredding.com">{{ post.author }}</a><br />
                {{ post.pubDate }}<br />
                {{ post.enclosure.length }}<br />
            </div>



        </div>

        <div class="col-lg-4">
            <div class="well">
                <h4>Guests</h4>
                <br />
                <div class="row">
                    <div class="col-md-12">
                        <ul class="list-unstyled">
                            {% for guest in guests %}
                                <li><a href="{{ guest.url }}">{{ guest.name }}</a></li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
                <div>
                    <p>&mdash;</p>
                    <p>The <a href="http://christiantranshumanistpodcast.com">Christian Transhumanist Podcast</a> is an editorially independent production of Micah Redding, provided here as a community resource on behalf of the CTA.</p>
                </div>
            </div>
        </div>


    </div>
    <!-- /.row -->

    <hr>

    {% include 'shared/footer.njk' %}
</div>
<!-- /.container -->
